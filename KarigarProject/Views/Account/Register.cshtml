@{
}
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3><i class="fas fa-user-plus me-2"></i>Join Karigar</h3>
                </div>
                <div class="card-body p-5">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">Email Address</label>
                                <input type="email" name="email" class="form-control"
                                       placeholder="Enter your email" required>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label">Password</label>
                                <input type="password" name="password" class="form-control"
                                       placeholder="Create a password" required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Register as</label>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-check card p-3">
                                        <input class="form-check-input" type="radio" name="role"
                                               id="customer" value="Customer" checked>
                                        <label class="form-check-label" for="customer">
                                            <i class="fas fa-user fa-2x text-primary mb-2"></i>
                                            <h6>Customer</h6>
                                            <small class="text-muted">Looking for services</small>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check card p-3">
                                        <input class="form-check-input" type="radio" name="role"
                                               id="provider" value="ServiceProvider">
                                        <label class="form-check-label" for="provider">
                                            <i class="fas fa-briefcase fa-2x text-primary mb-2"></i>
                                            <h6>Service Provider</h6>
                                            <small class="text-muted">Offer your services</small>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-karigar-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i> Create Account
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <p class="mb-0">
                                Already have an account?
                                <a asp-controller="Account" asp-action="Login" class="text-primary">Login here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-check .card {
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .form-check-input:checked + .form-check-label .card {
        border-color: var(--primary);
        background: rgba(0, 180, 216, 0.1);
    }

    .form-check-input {
        display: none;
    }
</style>